<!-- New Survey header -->
<div class="page-header">
  <div class="page-header-content">
    <div class="page-title">
      <h4><i class="icon-stack-plus position-left"></i> <span class="text-semibold">Survey</span> - New</h4>

      <ul class="breadcrumb breadcrumb-caret position-right">
        <li>Begin creating a new survey</li>
