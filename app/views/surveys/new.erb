    <!-- Main content -->
    <div class="content-wrapper">


    <form id="new-survey-form" method="post" action="/surveys">
      <div class="panel panel-flat">
        <div class="panel-heading">
          <h5 class="panel-title">Title and Description</h5></div>

        <div class="panel-body">
          <div class="form-group">
            <label>Title:</label>
            <input type="text" class="form-control" name="survey[title]" value="<%= @survey.title %>">
          </div>

          <div class="form-group">
            <label>Description:</label>
            <textarea class="form-control" name="survey[description]" value="<%=@survey.description%>"></textarea>
          </div>

          <div class="text-right">
            <button type="submit" class="btn btn-primary">Next Step <i class="icon-arrow-right14 position-right"></i></button>
          </div>


        </div>
      </div>
    </form>


